{{ 'section-rich-banner-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .rich-text {
        --mobileTopPadding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        --mobileBottomPadding: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        --desktopTopPadding: {{ section.settings.padding_top }}px;
        --desktopBottomPadding: {{ section.settings.padding_bottom }}px;
        --hero-content-bg: {{ section.settings.content_bg_color }};
        --d-heading-size: {{ section.settings.d_heading_size }}px;
        --m-heading-size: {{ section.settings.m_heading_size }}px;
        --heading-color: {{ section.settings.heading_color }};
    }
{%- endstyle -%}
{% liquid
    assign heading = section.settings.heading
    assign mheading = section.settings.mobile_heading
    if mheading == blank
        assign mheading = section.settings.heading
    endif
%}
{% if heading != blank %}
<rich-text class="rich-text">
    <div class="page-width">
        <h2 class="richText--heading m-hidden d-block">{{- heading -}}</h2>
        <h2 class="richText--heading block d-hidden">{{- mheading -}}</h2>
    </div>
</rich-text>
{% endif %}
{% schema %}
    {
      "name": "Rich banner text",
      "tag": "section",
      "class": "section section-rich-text",
      "disabled_on": {
        "groups": ["header", "footer"]
      },
      "settings": [               
            {
                "type": "inline_richtext",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "inline_richtext",
                "id": "mobile_heading",
                "label": "Mobile heading"
            },
            {
                "type": "header",
                "content": "Content Background style"
            },
            {
                "type": "color",
                "id": "content_bg_color",
                "label": "Content bg Color",
                "default": "#fff"
            },
            {
                "type": "header",
                "content": "Heading style"
            },
            {
                "type": "range",
                "id": "d_heading_size",
                "min": 10,
                "max": 30,
                "step": 2,
                "unit": "px",
                "label": "Desktop Heading size",
                "default": 16
            },
            {
                "type": "range",
                "id": "m_heading_size",
                "min": 10,
                "max": 24,
                "step": 2,
                "unit": "px",
                "label": "Mobile Heading size",
                "default": 14
            },
            {
                "type": "header",
                "content": "Padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 80,
                "step": 2,
                "unit": "px",
                "label": "Padding top",
                "default": 10
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 80,
                "step": 2,
                "unit": "px",
                "label": "Padding bottom",
                "default": 10
            }
      ],
      "presets": [
        {
          "name": "Rich banner text"
        }
      ]
    }
{% endschema %}